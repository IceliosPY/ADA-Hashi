   procedure CreerBoite is
   Fixed : Gtk_Fixed;
begin
   -- Initialisation de Gtk
   Gtk.Main.Init;

   -- CrÈation de la fenÍtre
   Gtk_New (Win);
   Set_Title (Win, "Hashi- S102 - ...");
   Set_Default_Size (Win, 700, 337);
      Set_Resizable (Win, False);

   -- CrÈer un conteneur GtkFixed
   Gtk_New (Fixed);
   Add (Win, Fixed);

   -- CrÈer et ajouter l'image au conteneur Fixed
   Image := Gtk_Image_New_From_File ("Texture/fond2.png"); -- Charger l'image
   Put (Fixed, Image, 0, 0); -- Positionner l'image ‡ (0, 0) dans Fixed

   -- CrÈer et ajouter la boÓte principale au conteneur Fixed
   Gtk_New_Vbox (Main_Box);
      Put (Fixed, Main_Box, 0, 120); -- Positionner Main_Box au mÍme endroit

      Show_All (Win);
      Win.Present;
end CreerBoite;
   procedure CreerRangee(L1 : in out Liste_bouton) is
